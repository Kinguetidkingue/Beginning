function changeColor() {
    //Changing dynamically the style of the header with JavaScript
    let header = document.getElementById("HEADER");
    header.style.color = "red";
    header.style.fontSize = "23px";
    header.style.fontWeight = "bold";
    header.style.textAlign = "center";
    header.style.backgroundColor = "light";
    header.style.padding = "10px";
    header.style.fontFamily = "Arial black, sans-serif";
    //Changing dynamically the style of the paragraph with JavaScript
    let paragraph = document.getElementById("PARA");
    paragraph.style.color = "#142598f8";
    paragraph.style.fontSize = "20px";
    paragraph.style.textAlign = "left";
    paragraph.style.backgroundColor = "light";
    paragraph.style.padding = "7px";
    paragraph.style.fontFamily = "helvetica, sans-serif";
    paragraph.style.lineHeight = "28px";
    paragraph.style.fontWeight = "bold";
    paragraph.style.wordSpacing = "0.5px";
    paragraph.style.height = "150px";
    paragraph.style.marginBottom = "35px";
    //Changing dynamically the style of the button with JavaScript
    let button = document.getElementById("MTB");
    button.style.backgroundColor = "#1627c0ff";
    button.style.color = "#fff";
    button.style.border = "none";
    button.transition = "background-color 0.3s ease";
    button.style.fontSize = "16px"; 
    button.style.marginTop = "20px";
}
//Creating a counter to test the dynamism of Javascript
const increaseBtn = document.getElementById('increaseBtn');
const decreaseBtn = document.getElementById('decreaseBtn');
const resetBtn = document.getElementById('resetBtn');
const countLabel = document.getElementById('countLabel');
let count = 0;
increaseBtn.onclick = function(){
    count++;
    countLabel.textContent = count;
}
decreaseBtn.onclick = function() {
    count--;
    countLabel.textContent = count;
}
resetBtn.onclick = function(){
    count = 0;
    countLabel.textContent = count;
};
console.log(count);

